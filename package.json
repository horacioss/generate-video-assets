{
  "name": "video-generator",
  "version": "1.0.0",
  "description": "Automated video generation workflow",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "node --import tsx --test ./test/**/*.test.ts",
    "build": "tsc",
    "prebuild": "rimraf dist",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.6.1",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.13",
    "cross-env": "^10.0.0",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
